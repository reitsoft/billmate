datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Kunden {
  id        Int        @id @default(autoincrement())
  nummer    String     @unique
  firma     String
  anrede    String
  vorname   String
  nachname  String
  mobil     String
  email     String
  adresse   String
  ort       String
  angebote  Angebote[]
  geloescht Boolean    @default(false)
  createdAt DateTime   @default(now())
}

model Angebote {
  id           Int      @id @default(autoincrement())
  Kunden       Kunden?  @relation(fields: [kundeId], references: [id])
  kundeId      Int?
  nummer       String   @unique
  datum        DateTime @default(now())
  angebotswert String
  beschreibung String
  gueltigkeit  DateTime @default(now())
  zuschlag     Boolean  @default(false)
  abgerechnet  Boolean  @default(false)
}

model Dienstleistungen {
  id           Int    @id @default(autoincrement())
  name         String
  beschreibung String
  stundensatz  String @default("0.0")
}

model Einheiten {
  id          Int      @id @default(autoincrement())
  bezeichnung String
  abkuerzung  String
  createdAt   DateTime @default(now())
}

model Material {
  id           Int      @id @default(autoincrement())
  name         String
  beschreibung String
  vpe          String   @default("1")
  einheit      String
  preis        String   @default("0.0")
  createdAt    DateTime @default(now())
}
